extends layout

block content

  form(method="post" action=`/edit/${item.id}`)
    .row
      label Title:
      input(type="text" value=`${item.title}` name="title")

    .row.author
      label Author:
      for author in item.authors
        input(type="text" value=`${author.name}` name="authors")
      button.addAuthorButton.span.glyphicon.glyphicon-plus.btn.btn-xs

    .row.genre
      label Genre:
      for genre in item.genres
        input(type="text" value=`${genre.name}` name="genres")
      button.addGenreButton.span.glyphicon.glyphicon-plus.btn.btn-xs

    .row
      label Image URL:
      input(type="text" value=`${item.image_url}` name="image_url" size="50")

    .row
      label Description:
      textarea(type="text" name="description" rows="4" cols="50") #{item.description}

    .row
      button(type="submit") Save Changes
